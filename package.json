{
  "name": "blind-peer-router",
  "version": "0.1.0",
  "description": "Single-writer RPC service mapping content keys to blind peer assignments",
  "main": "index.js",
  "scripts": {
    "lint": "prettier --check . && lunte",
    "format": "prettier --write . && lunte --fix",
    "test": "brittle test/test.js",
    "test-bare": "brittle-bare test/test.js",
    "build": "node build.js",
    "bench:flush": "node bench/flush-benchmark.js"
  },
  "bin": {
    "blind-peer-router": "bin.js",
    "blind-peer-router-bare": "bin-bare.js"
  },
  "files": [
    "index.js",
    "bin.js",
    "spec/"
  ],
  "keywords": [
    "blind-peer",
    "router",
    "rpc",
    "hyperdb",
    "dht"
  ],
  "author": "Holepunch",
  "license": "Apache-2.0",
  "dependencies": {
    "bare-fs": "^4.5.4",
    "bare-os": "^3.7.0",
    "bare-path": "^3.0.0",
    "compact-encoding": "^2.16.0",
    "corestore": "^7.7.0",
    "graceful-goodbye": "^1.3.3",
    "hyper-instrument": "^3.0.1",
    "hypercore-id-encoding": "^1.3.0",
    "hyperdb": "^6.0.0",
    "hyperschema": "^1.10.4",
    "hyperswarm": "^4.16.0",
    "paparam": "^1.9.1",
    "pino": "^10.3.1",
    "pino-bare": "^0.0.1",
    "protomux-rpc-middleware": "^1.0.0",
    "protomux-rpc-router": "^1.0.0",
    "ready-resource": "^1.1.2",
    "scope-lock": "^1.2.4",
    "xor-distance": "^2.0.0"
  },
  "devDependencies": {
    "b4a": "^1.6.7",
    "brittle": "^3.7.0",
    "hyperdht": "^6.20.1",
    "lunte": "^1.6.0",
    "prettier": "^3.7.4",
    "prettier-config-holepunch": "^2.0.0",
    "protomux-rpc": "^1.7.1",
    "test-tmp": "^1.3.0"
  },
  "imports": {
    "fs": {
      "bare": "bare-fs",
      "default": "fs"
    },
    "os": {
      "bare": "bare-os",
      "default": "os"
    },
    "path": {
      "bare": "bare-path",
      "default": "path"
    },
    "pino": {
      "bare": "pino-bare",
      "default": "pino"
    }
  }
}
